---
interface Props {
    title: string;
    subtitle: string;
    backgroundImage?: string;
}

const { title, subtitle, backgroundImage } = Astro.props;
---

<section class="hero">
    <div class="container hero-content">
        <h1>{title}</h1>
        <p>{subtitle}</p>
    </div>
    {
        backgroundImage && (
            <div
                class="hero-bg"
                style={`background-image: url(${backgroundImage})`}
            />
        )
    }
</section>

<style>
    .hero {
        position: relative;
        padding: var(--spacing-xl) 0;
        background: linear-gradient(
            135deg,
            var(--color-secondary) 0%,
            var(--color-secondary-light) 100%
        );
        color: white;
        text-align: center;
        overflow: hidden;
        margin-bottom: var(--spacing-lg);
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: var(--spacing-sm);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    p {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.1;
        background-size: cover;
        background-position: center;
        z-index: 1;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
