---
import type { Product } from "../data/products";

interface Props {
    product: Product;
}

const { product } = Astro.props;
---

<article class="product-card">
    <div class="image-container">
        <img
            src={product.image}
            alt={product.title}
            loading="lazy"
            referrerpolicy="no-referrer"
        />
        <div class="overlay">
            <a
                href={product.affiliateLink}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-primary"
            >
                Ver en Amazon
            </a>
        </div>
    </div>
    <div class="content">
        <div class="rating">
            {
                Array.from({ length: 5 }).map((_, i) => (
                    <span
                        class={
                            i < Math.floor(product.rating)
                                ? "star filled"
                                : "star"
                        }
                    >
                        ★
                    </span>
                ))
            }
            <span class="review-count">({product.reviews})</span>
        </div>
        <h3 class="title">
            <a
                href={product.affiliateLink}
                target="_blank"
                rel="noopener noreferrer"
            >
                {product.title}
            </a>
        </h3>
        <p class="price">{product.price.toFixed(2)} €</p>
    </div>
</article>

<style>
    .product-card {
        background: var(--color-surface);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-hover);
    }

    .image-container {
        position: relative;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        overflow: hidden;
        background: #fff;
    }

    .image-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 1rem;
        transition: transform 0.5s ease;
    }

    .product-card:hover .image-container img {
        transform: scale(1.05);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .overlay {
        opacity: 1;
    }

    .content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .star {
        color: #ddd;
    }

    .star.filled {
        color: var(--color-accent);
    }

    .review-count {
        color: var(--color-text-muted);
        font-size: 0.8rem;
        margin-left: 0.25rem;
    }

    .title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .title a:hover {
        color: var(--color-primary);
    }

    .price {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-primary);
        margin-top: auto;
    }
</style>
